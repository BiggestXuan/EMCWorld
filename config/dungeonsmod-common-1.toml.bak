	[bosses.king]
		"King Loot Table" = "dungeonsmod:entities/king"

	[bosses.kraken]
		"Kraken Loot Table" = "dungeonsmod:entities/kraken"

	[bosses.sun]
		"Sun Loot Table" = "dungeonsmod:entities/sun"

	[bosses.voidmaster]
		"Voidmaster Loot Table" = "dungeonsmod:entities/voidmaster"

[difficulty]
	#[BETA] For manual adjustment. Recommended number = (Highest Weapon Damage / 20) . For reference, Vanilla defaults equivalent : Easy = 0.25, Normal = 0.5, Hard = 0.75. Values > 1 requires Attribute Fix Mod. For using server difficulty = 0
	#Range: -0.25 ~ 1000.0
	"Custom Difficulty Value" = 0.0
	#[BETA] This will make bosses to scale with the number of players near and the world difficulty 
	"Multiplayer Scaling" = true

[invocations]
	#Enable Traveler invocation
	"Traveler Invocation" = true
	#Enable Sun invocation
	"Sun Invocation" = true
	#Enable Lord Skeleton invocation
	"Lord Skeleton Invocation" = true
	#Enable Winter Hunter invocation
	"Winter Hunter Invocation" = true

[items]

	[items.times]
		#Home Gem Cooldown in Ticks
		#Range: > 0
		"Home Gem Cooldown" = 18000
		#Home Gem Cast Time in Ticks
		#Range: > 0
		"Home Gem Cast Time" = 200
		#Sun Overdrive Cooldown in Ticks
		#Range: > 0
		"Sun Overdrive Cooldown" = 144000
		#Sun Overdrive Cast Time in Ticks
		#Range: > 0
		"Sun Overdrive Cast Time" = 200

	[items.activations]

		[items.activations.back_pergamine]
			Enable = true

		[items.activations.home_gem]
			Enable = true

		[items.activations.golden_bone]
			Enable = true

		[items.activations.sun_overdrive]
			Enable = true

		[items.activations.unstable_map]
