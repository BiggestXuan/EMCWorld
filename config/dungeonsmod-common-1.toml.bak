		"Crawler Armor Durability Factor" = 60
		"Crawler Armor Values (Boots, Leggins, Chestplate, Helmet)" = [3, 5, 8, 2]
		#Range: 7.0 ~ 1000.0
		"Void Tome Damage" = 8.0

