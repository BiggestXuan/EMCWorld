
#Dungeons Mod Configuration Settings
[general]
	#Should players leave a ghost when they die? 0 to disable, 1 to always, 100/positiveValues chance
	#Range: > 0
	"Ghost Players" = 20

[bosses]

	[bosses.crawler]
		"Crawler Loot Table" = "dungeonsmod:entities/crawler"

	[bosses.deserted]
		"Deserted Loot Table" = "dungeonsmod:entities/deserted"

	[bosses.ironslime]
